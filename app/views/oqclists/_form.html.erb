<div class="form-group">
    <%= f.label :customer_id, "Customer :" %>
    <%= f.select :customer_id, Customer.all.map{ |x|[x.name,x.id]} %>
</div>
<div class="form-group">
    <%= f.label :lotno, "Lot No :" %>
    <%= f.text_field :lotno %>
</div>
<div class="form-group">
    <%= f.label :product_id, "Part No :" %>
    <%= f.select :product_id, Product.all.map{ |x|[x.partno,x.id]} %>
    <%= link_to new_product_path, :class => "btn btn-info btn-sm" do %>
        <i class="fa fa-plus-square-o" aria-hidden="true"></i>
    <% end %>
</div>
<div class="form-group">
    <%= f.label :quantity, "Lot No :" %>
    <%= f.number_field :quantity %>
</div>





